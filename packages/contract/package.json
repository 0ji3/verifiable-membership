{
    "name": "contract",
    "version": "0.1.0",
    "description": "Verifiable credentials for UNCHAIN members.",
    "scripts": {
        "lint": "yarn run rome check .",
        "lint:fix": "yarn run rome check . --apply",
        "format": "prettier --ignore-unknown --no-error-on-unmatched-pattern --ignore-path .prettierignore --check .",
        "format:fix": "prettier --ignore-unknown --no-error-on-unmatched-pattern --ignore-path .prettierignore --write .",
        "solhint": "solhint --max-error 0 -c ./solhint.json --ignore-path .solhintignore \"contracts/**/*.sol\"",
        "solhint:fix": "solhint --fix --max-error 0 -c ./solhint.json --ignore-path .solhintignore \"contracts/**/*.sol\"",
        "test": "npx hardhat test test/0.integrated.test.ts"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.6",
        "@nomiclabs/hardhat-etherscan": "^3.1.0",
        "@openzeppelin/hardhat-upgrades": "^1.19.0",
        "@typechain/ethers-v5": "^10.1.0",
        "@typechain/hardhat": "^6.1.2",
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^12.20.55",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "chai": "^4.3.6",
        "dotenv": "^16.0.1",
        "ethers": "^5.6.9",
        "hardhat": "^2.9.9",
        "hardhat-gas-reporter": "^1.0.8",
        "prettier": "^2.7.1",
        "prettier-plugin-solidity": "^1.0.0-beta.13",
        "solhint": "^3.3.7",
        "solidity-coverage": "^0.7.21",
        "ts-node": "^10.8.1",
        "typechain": "^8.1.0",
        "typescript": "^4.7.3"
    }
}
